			<action method="setItemLimit"><type>giftvoucher</type><limit>4</limit></action>
		</reference>
	</PRODUCT_TYPE_simple>

<!-- Gift Voucher Product Type -->
	<PRODUCT_TYPE_giftvoucher translate="label" module="giftvoucher">
